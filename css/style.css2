/* ===== GOOGLE FONTS ===== */
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap');

/* ===== VARIABLES ===== */
:root {
    /* Colors */
    --primary-color: #4a90e2;
    --primary-color-light: #6ec1e4;
    --primary-color-dark: #3578ca;
    --secondary-color: #2c3e50;
    --accent-color: #f39c12;
    --text-color: #333333;
    --text-color-light: #666666;
    --bg-color: #ffffff;
    --bg-color-light: #f9f9f9;
    --bg-color-alt: #eef5ff;
    --success-color: #2ecc71;
    --error-color: #e74c3c;
    --border-color: #e0e0e0;
    --shadow-color: rgba(0, 0, 0, 0.1);
    
    /* Typography */
    --body-font: 'Montserrat', sans-serif;
    --big-font-size: 2.75rem;
    --h1-font-size: 2.25rem;
    --h2-font-size: 1.75rem;
    --h3-font-size: 1.25rem;
    --normal-font-size: 1rem;
    --small-font-size: 0.875rem;
    --smaller-font-size: 0.75rem;
    
    /* Font Weight */
    --font-light: 300;
    --font-regular: 400;
    --font-medium: 500;
    --font-semi-bold: 600;
    --font-bold: 700;
    
    /* Margins */
    --mb-0-25: 0.25rem;
    --mb-0-5: 0.5rem;
    --mb-1: 1rem;
    --mb-1-5: 1.5rem;
    --mb-2: 2rem;
    --mb-2-5: 2.5rem;
    --mb-3: 3rem;
    
    /* z-index */
    --z-tooltip: 10;
    --z-fixed: 100;
    --z-modal: 1000;
    
    /* Border Radius */
    --border-radius-sm: 0.25rem;
    --border-radius: 0.5rem;
    --border-radius-lg: 1rem;
    --border-radius-full: 9999px;
    
    /* Transitions */
    --transition-speed: 0.3s;
    
    /* Shadows */
    --shadow-sm: 0 2px 4px var(--shadow-color);
    --shadow: 0 4px 8px var(--shadow-color);
    --shadow-lg: 0 8px 16px var(--shadow-color);
}

/* ===== BASE ===== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
    scroll-padding-top: 5rem;
}

body {
    font-family: var(--body-font);
    font-size: var(--normal-font-size);
    color: var(--text-color);
    background-color: var(--bg-color);
    line-height: 1.6;
    font-weight: var(--font-regular);
    overflow-x: hidden;
}

h1, h2, h3, h4 {
    font-weight: var(--font-bold);
    line-height: 1.2;
    color: var(--secondary-color);
}

ul {
    list-style: none;
}

a {
    text-decoration: none;
    color: var(--text-color);
    transition: color var(--transition-speed) ease;
}

a:hover {
    color: var(--primary-color);
}

img {
    max-width: 100%;
    height: auto;
    display: block;
}

button, input, textarea {
    font-family: var(--body-font);
    font-size: var(--normal-font-size);
    outline: none;
    border: none;
}

button {
    cursor: pointer;
    background: none;
}

.section {
    padding: 5rem 0;
}

.section-title {
    font-size: var(--h2-font-size);
    color: var(--secondary-color);
    text-align: center;
    margin-bottom: var(--mb-2);
    position: relative;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background: var(--primary-color);
    border-radius: var(--border-radius-full);
}

.section-subtitle {
    text-align: center;
    font-size: var(--normal-font-size);
    color: var(--text-color-light);
    max-width: 800px;
    margin: 0 auto var(--mb-3);
}

.container {
    max-width: 1200px;
    width: 90%;
    margin: 0 auto;
}

/* ===== BUTTONS ===== */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius);
    font-weight: var(--font-medium);
    transition: all var(--transition-speed) ease;
    cursor: pointer;
    text-align: center;
}

.primary-btn {
    background-color: var(--primary-color);
    color: white;
    box-shadow: var(--shadow-sm);
}

.primary-btn:hover {
    background-color: var(--primary-color-dark);
    color: white;
    transform: translateY(-3px);
    box-shadow: var(--shadow);
}

.outline-btn {
    background-color: transparent;
    color: var(--primary-color);
    border: 2px solid var(--primary-color);
}

.outline-btn:hover {
    background-color: var(--primary-color);
    color: white;
    transform: translateY(-3px);
    box-shadow: var(--shadow);
}

/* ===== PRELOADER ===== */
.preloader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--bg-color);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    transition: opacity 0.5s ease, visibility 0.5s ease;
}

.preloader.hidden {
    opacity: 0;
    visibility: hidden;
}

.spinner {
    width: 60px;
    height: 60px;
    border: 4px solid var(--bg-color-light);
    border-top: 4px solid var(--primary-color);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* ===== HEADER ===== */
.header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: transparent;
    z-index: var(--z-fixed);
    transition: background-color var(--transition-speed), box-shadow var(--transition-speed);
}

.header.scrolled {
    background-color: var(--bg-color);
    box-shadow: var(--shadow-sm);
}

.header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 5rem;
    padding: 0 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

.logo {
    display: flex;
    align-items: center;
    font-weight: var(--font-bold);
    font-size: 1.25rem;
}

.logo-text {
    color: var(--secondary-color);
}

.logo-accent {
    color: var(--primary-color);
    margin-left: 0.25rem;
}

.navbar ul {
    display: flex;
    align-items: center;
    gap: 2rem;
}

.nav-link {
    font-weight: var(--font-medium);
    position: relative;
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--primary-color);
    transition: width var(--transition-speed) ease;
}

.nav-link:hover::after,
.nav-link.active::after {
    width: 100%;
}

.menu-toggle {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 24px;
    height: 20px;
    cursor: pointer;
}

.bar {
    height: 3px;
    width: 100%;
    background-color: var(--secondary-color);
    border-radius: var(--border-radius-full);
    transition: all var(--transition-speed) ease;
}

/* ===== HOME ===== */
.home {
    height: 100vh;
    display: flex;
    align-items: center;
    padding-top: 5rem;
    overflow: hidden;
}

.home-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

.home-text {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.subtitle {
    font-size: var(--normal-font-size);
    color: var(--primary-color);
    font-weight: var(--font-medium);
}

.title {
    font-size: clamp(2rem, 5vw, var(--big-font-size));
    line-height: 1.3;
}

.gradient-text {
    background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.description {
    font-size: var(--normal-font-size);
    color: var(--text-color-light);
    max-width: 600px;
}

.buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.home-image {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.home-image::before {
    content: '';
    position: absolute;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background-color: var(--bg-color-alt);
    z-index: -1;
}

.home-image img {
    max-width: 120%;
    animation: float 3s ease-in-out infinite;
}

@keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
}

/* ===== FEATURES ===== */
.features {
    background-color: var(--bg-color-light);
    padding: 5rem 0;
}

.features-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
}

.feature-card {
    background-color: var(--bg-color);
    padding: 2rem;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    text-align: center;
    transition: transform var(--transition-speed), box-shadow var(--transition-speed);
}

.feature-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow);
}

.feature-icon {
    margin: 0 auto var(--mb-1);
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--border-radius-full);
    background-color: var(--bg-color-alt);
}

.feature-icon img {
    width: 32px;
    height: 32px;
}

.feature-title {
    font-size: var(--h3-font-size);
    margin-bottom: var(--mb-0-5);
}

.feature-text {
    color: var(--text-color-light);
    font-size: var(--small-font-size);
}

/* ===== SERVICES ===== */
.services {
    padding: 5rem 0;
}

.services-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

.services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
}

.service-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 2rem;
    border-radius: var(--border-radius);
    background-color: var(--bg-color-light);
    transition: transform var(--transition-speed), box-shadow var(--transition-speed);
}

.service-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow);
}

.service-image {
    margin-bottom: var(--mb-1);
    width: 80px;
    height: 80px;
    object-fit: contain;
}

.service-title {
    font-size: var(--h3-font-size);
    margin-bottom: var(--mb-0-5);
}

.service-text {
    color: var(--text-color-light);
    font-size: var(--small-font-size);
}

/* ===== PRICES ===== */
.prices {
    background-color: var(--bg-color-alt);
    padding: 5rem 0;
}

.prices-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

.prices-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
    margin-bottom: var(--mb-2);
}

.price-card {
    background-color: var(--bg-color);
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: transform var(--transition-speed), box-shadow var(--transition-speed);
    position: relative;
}

.price-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow);
}

.price-card.popular {
    border: 2px solid var(--primary-color);
    transform: scale(1.05);
}

.price-card.popular:hover {
    transform: scale(1.05) translateY(-10px);
}

.price-badge {
    position: absolute;
    top: 20px;
    right: -35px;
    background-color: var(--accent-color);
    color: white;
    padding: 0.5rem 3rem;
    transform: rotate(45deg);
    font-size: var(--smaller-font-size);
    font-weight: var(--font-medium);
}

.price-header {
    padding: 2rem;
    text-align: center;
    border-bottom: 1px solid var(--border-color);
}

.price-title {
    font-size: var(--h3-font-size);
    margin-bottom: var(--mb-1);
}

.price-tag {
    font-size: var(--small-font-size);
    color: var(--text-color-light);
}

.price-value {
    font-size: 2.5rem;
    font-weight: var(--font-bold);
    color: var(--secondary-color);
}

.price-body {
    padding: 2rem;
}

.price-features {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.price-features li {
    display: flex;
    align-items: center;
    color: var(--text-color-light);
    font-size: var(--small-font-size);
}

.price-features li::before {
    content: 'âœ“';
    display: inline-block;
    margin-right: 0.5rem;
    color: var(--success-color);
    font-weight: var(--font-bold);
}

.price-footer {
    padding: 2rem;
    text-align: center;
}

.prices-note {
    text-align: center;
    font-size: var(--smaller-font-size);
    color: var(--text-color-light);
    max-width: 800px;
    margin: 0 auto;
}

/* ===== CALCULATOR ===== */
.calculator {
    padding: 5rem 0;
}

.calculator-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

.calculator-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 3rem;
    align-items: start;
}

.calculator-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 2rem;
    background-color: var(--bg-color-light);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.form-group label {
    font-weight: var(--font-medium);
    font-size: var(--small-font-size);
}

.form-group input {
    padding: 0.75rem 1rem;
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius);
    transition: border-color var(--transition-speed);
}

.form-group input:focus {
    border-color: var(--primary-color);
}

.form-group input.error {
    border-color: var(--error-color);
}

.calculator-result {
    padding: 2rem;
    background-color: var(--bg-color);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    text-align: center;
}

.calculator-result h3 {
    font-size: var(--h3-font-size);
}

.result {
    font-size: 2.5rem;
    font-weight: var(--font-bold);
    color: var(--secondary-color);
    transition: color var(--transition-speed);
}

.result.highlight {
    color: var(--primary-color);
}

.result.error {
    color: var(--error-color);
}

.result-note {
    font-size: var(--smaller-font-size);
    color: var(--text-color-light);
}

/* ===== TRUCK INFO ===== */
.truck-info {
    background-color: var(--bg-color-light);
    padding: 5rem 0;
}

.truck-info-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

.truck-info-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-top: 3rem;
    align-items: center;
}

.truck-image {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.truck-image::before {
    content: '';
    position: absolute;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background-color: var(--bg-color-alt);
    z-index: 0;
}

.truck-image img {
    max-width: 100%;
    position: relative;
    z-index: 1;
}

.truck-specs {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.truck-specs h3 {
    font-size: var(--h3-font-size);
    margin-bottom: var(--mb-0-5);
}

.specs-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.specs-list li {
    display: flex;
    justify-content: space-between;
    padding-bottom: 0.5rem;
    border-bottom: 1px dashed var(--border-color);
}

.spec-name {
    font-weight: var(--font-medium);
}

.spec-value {
    color: var(--primary-color);
    font-weight: var(--font-medium);
}

.truck-description {
    margin-top: 3rem;
}

.truck-description h3 {
    font-size: var(--h3-font-size);
    margin-bottom: var(--mb-1);
}

.truck-description p {
    color: var(--text-color-light);
    margin-bottom: var(--mb-1);
}

/* ===== CONTACTS ===== */
.contacts {
    padding: 5rem 0;
}

.contacts-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

.contacts-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-top: 3rem;
}

.contact-info {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
}

.contact-method {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
}

.contact-icon {
    font-size: 2rem;
    color: var(--primary-color);
}

.contact-details {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.contact-details h3 {
    font-size: var(--normal-font-size);
}

.contact-details a {
    color: var(--primary-color);
    font-weight: var(--font-medium);
}

.contact-details p {
    font-size: var(--small-font-size);
    color: var(--text-color-light);
}

.contact-form-wrapper {
    padding: 2rem;
    background-color: var(--bg-color-light);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
}

.contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.form-group textarea {
    padding: 0.75rem 1rem;
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius);
    resize: vertical;
    min-height: 120px;
    transition: border-color var(--transition-speed);
}

.form-group textarea:focus {
    border-color: var(--primary-color);
}

.error-message {
    color: var(--error-color);
    font-size: var(--smaller-font-size);
    margin-top: 0.25rem;
}

.success-message {
    color: var(--success-color);
    font-weight: var(--font-medium);
    padding: 0.5rem 0;
}

.map-container {
    margin-top: 3rem;
    height: 400px;
    border-radius: var(--border-radius);
    overflow: hidden;
    position: relative;
}

#map {
    width: 100%;
    height: 100%;
}

.map-placeholder {
    width: 100%;
    height: 100%;
    background-color: var(--bg-color-light);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
}

/* ===== FOOTER ===== */
.footer {
    background-color: var(--secondary-color);
    color: white;
    padding-top: 4rem;
    position: relative;
}

.footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

.footer-top {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    margin-bottom: 3rem;
}

.footer-logo {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.footer-logo .logo {
    color: white;
}

.footer-logo .logo-text {
    color: white;
}

.footer-description {
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--small-font-size);
}

.footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
}

.footer-column h3 {
    color: white;
    font-size: var(--normal-font-size);
    margin-bottom: var(--mb-1-5);
}

.footer-column ul {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.footer-column a {
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--small-font-size);
    transition: color var(--transition-speed);
}

.footer-column a:hover {
    color: var(--primary-color-light);
}

.footer-column li {
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--small-font-size);
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.footer-column i {
    color: var(--primary-color-light);
}

.footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.copyright {
    font-size: var(--smaller-font-size);
    color: rgba(255, 255, 255, 0.7);
}

.footer-policy {
    display: flex;
    gap: 1.5rem;
}

.footer-policy a {
    font-size: var(--smaller-font-size);
    color: rgba(255, 255, 255, 0.7);
}

.scroll-to-top {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 50px;
    height: 50px;
    background-color: var(--primary-color);
    color: white;
    border-radius: var(--border-radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    cursor: pointer;
    transition: all var(--transition-speed) ease;
    transform: scale(0);
    opacity: 0;
    visibility: hidden;
    box-shadow: var(--shadow);
}

.scroll-to-top.show {
    transform: scale(1);
    opacity: 1;
    visibility: visible;
}

.scroll-to-top:hover {
    background-color: var(--primary-color-dark);
    transform: translateY(-5px) scale(1.05);
}

/* ===== REVEAL ANIMATION ===== */
.reveal-element {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease;
}

.reveal-element.active {
    opacity: 1;
    transform: translateY(0);
}

/* ===== RESPONSIVE ===== */
@media screen and (max-width: 1024px) {
    .home-container,
    .truck-info-wrapper {
        grid-template-columns: 1fr;
        gap: 3rem;
    }
    
    .home-image {
        order: -1;
    }
    
    .home-text {
        text-align: center;
        align-items: center;
    }
    
    .calculator-wrapper {
        grid-template-columns: 1fr;
    }
    
    .contacts-wrapper {
        grid-template-columns: 1fr;
    }
    
    .contact-info {
        order: 1;
    }
}

@media screen and (max-width: 768px) {
    :root {
        --big-font-size: 2.25rem;
        --h1-font-size: 1.75rem;
        --h2-font-size: 1.5rem;
        --h3-font-size: 1.15rem;
    }
    
    .header-container {
        padding: 0 1rem;
    }
    
    .menu-toggle {
        display: flex;
    }
    
    .navbar {
        position: fixed;
        top: 5rem;
        right: -100%;
        width: 80%;
        height: calc(100vh - 5rem);
        background-color: var(--bg-color);
        box-shadow: var(--shadow);
        transition: right var(--transition-speed) ease;
    }
    
    .navbar.active {
        right: 0;
    }
    
    .navbar ul {
        flex-direction: column;
        align-items: flex-start;
        padding: 2rem;
        height: 100%;
        gap: 1.5rem;
    }
    
    .menu-toggle.active .bar:nth-child(1) {
        transform: translateY(8px) rotate(45deg);
    }
    
    .menu-toggle.active .bar:nth-child(2) {
        opacity: 0;
    }
    
    .menu-toggle.active .bar:nth-child(3) {
        transform: translateY(-8px) rotate(-45deg);
    }
    
    .home {
        height: auto;
        padding-top: 7rem;
        padding-bottom: 3rem;
    }
    
    .features-grid,
    .services-grid,
    .prices-grid {
        grid-template-columns: 1fr;
    }
    
    .price-card.popular {
        transform: scale(1);
    }
    
    .price-card.popular:hover {
        transform: translateY(-10px);
    }
    
    .contact-info {
        grid-template-columns: 1fr;
    }
    
    .footer-top {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
    
    .footer-links {
        grid-template-columns: 1fr;
    }
    
    .footer-bottom {
        flex-direction: column;
        gap: 1rem;
    }
}

@media screen and (max-width: 576px) {
    .buttons {
        flex-direction: column;
        width: 100%;
    }
    
    .btn {
        width: 100%;
    }
    
    .truck-specs {
        padding: 1rem;
    }
}